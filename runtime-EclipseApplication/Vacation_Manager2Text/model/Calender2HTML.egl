        <script>
            function togglemore(obj, idmore) {
                moreele = document.getElementById(idmore);
                if (moreele.style.display == 'block') {
                    moreele.style.display = 'none';
                    obj.innerHTML = "Resturlaub anzeigen";
                } else {
                    moreele.style.display = 'block';
                    obj.innerHTML = "Resturlaub ausblenden";
                }
                return false;
            }
        </script>
        <a href="#" onclick="togglemore(this, 'additionalcontent1')">Resturlaub anzeigen</a>
