// Kalender

function Kalender(monat, jahr)

{
var pct= 0
var Monat= new Date(jahr, monat - 1, 1)
var Heute= new Date()
var DieserTag= null

function pcta(p)
{
status= "Aufbereitung Kalender " + String(p) + "% fertig."
